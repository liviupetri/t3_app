<% provide(:title, 'Sign Up') %>

<h1>
	Sign Up
</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

	  <%= render 'shared/error_messages' %>

      <p> <%= f.submit "Create my account", class: "btn btn-primary btn-default" %></p>
    <% end %>
  </div>
</div>


